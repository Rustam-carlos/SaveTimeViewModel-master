@model SaveTime.Web.Admin.Models.EmployeeViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Employee</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AccountEmail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="accountEmail">
                @foreach (var email in  ViewBag.AccountEmails)
                {
                    <option>@email</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AccountPhone, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="col-md-10">
                <select name="accountPhone">
                    @foreach (var phone in ViewBag.AccountPhones)
                    {
                        <option>@phone</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.BranchAddress, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="col-md-10">
                <select name="branchAddress">
                    @foreach (var address in ViewBag.BranchAddresses)
                    {
                        <option>@address</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.BranchPhone, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="branchPhone">
                @foreach (var phone in ViewBag.BranchPhones)
                {
                    <option>@phone</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
